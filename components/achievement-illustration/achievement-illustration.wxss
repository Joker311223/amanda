.illustration-container {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  min-height: 400rpx;
}

/* 左侧文档组 */
.documents-group {
  position: absolute;
  left: 40rpx;
  display: flex;
  gap: 30rpx;
}

.document-icon {
  animation: float 3s ease-in-out infinite;
}

.document-icon:nth-child(2) {
  animation-delay: 0.5s;
}

.document-circle {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #7cb342 0%, #558b2f 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(124, 179, 66, 0.3);
  position: relative;
}

.document-circle::before {
  content: '';
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 20rpx;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 2rpx;
}

.document-circle::after {
  content: '';
  position: absolute;
  bottom: 5rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 12rpx;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 2rpx;
}

.document-paper {
  width: 60rpx;
  height: 70rpx;
  background: white;
  border-radius: 6rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.paper-lines {
  padding: 12rpx 8rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.line {
  height: 2rpx;
  background: #e0e0e0;
  border-radius: 1rpx;
}

.line:nth-child(1) {
  width: 80%;
}

.line:nth-child(2) {
  width: 90%;
}

.line:nth-child(3) {
  width: 70%;
}

.check-mark {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  width: 24rpx;
  height: 24rpx;
  background: #7cb342;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 16rpx;
  font-weight: bold;
}

/* 主图标包装器 */
.main-icon-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 装饰粒子 */
.particles {
  position: absolute;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.particle {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  animation: particle-float 3s ease-in-out infinite;
}

.particle-1 {
  top: 10%;
  left: 20%;
  width: 16rpx;
  height: 16rpx;
  animation-delay: 0s;
}

.particle-2 {
  top: 20%;
  right: 15%;
  width: 10rpx;
  height: 10rpx;
  animation-delay: 0.5s;
}

.particle-3 {
  top: 40%;
  left: 10%;
  width: 14rpx;
  height: 14rpx;
  animation-delay: 1s;
}

.particle-4 {
  bottom: 30%;
  right: 20%;
  width: 12rpx;
  height: 12rpx;
  animation-delay: 1.5s;
}

.particle-5 {
  bottom: 15%;
  left: 25%;
  width: 10rpx;
  height: 10rpx;
  animation-delay: 2s;
}

.particle-6 {
  top: 50%;
  right: 10%;
  width: 8rpx;
  height: 8rpx;
  animation-delay: 2.5s;
}

/* 主图标 */
.main-icon {
  position: relative;
  z-index: 1;
}

/* 星星样式 */
.icon-star {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.star-shape {
  font-size: 200rpx;
  filter: drop-shadow(0 10rpx 30rpx rgba(255, 193, 7, 0.4));
  animation: star-bounce 2s ease-in-out infinite;
}

.star-shadow {
  width: 120rpx;
  height: 8rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 50%;
  margin-top: 20rpx;
  animation: shadow-pulse 2s ease-in-out infinite;
}

/* 仙人掌样式 */
.icon-cactus {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pot {
  width: 160rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #e3f2fd 0%, #90caf9 100%);
  border-radius: 0 0 80rpx 80rpx;
  border: 6rpx solid #333;
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pot-face {
  margin-top: 20rpx;
}

.cactus-body {
  position: absolute;
  top: -80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cactus-main {
  font-size: 100rpx;
  filter: drop-shadow(0 8rpx 20rpx rgba(76, 175, 80, 0.3));
}

.cactus-arm {
  font-size: 40rpx;
  position: absolute;
}

.cactus-arm.left {
  left: -30rpx;
  top: 20rpx;
}

.cactus-arm.right {
  right: -30rpx;
  top: 20rpx;
}

.cactus-shadow {
  width: 140rpx;
  height: 8rpx;
  background: rgba(0, 0, 0, 0.15);
  border-radius: 50%;
  margin-top: 10rpx;
}

/* 蘑菇样式 */
.icon-mushroom {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mushroom-cap {
  width: 180rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #42a5f5 0%, #1976d2 100%);
  border-radius: 90rpx 90rpx 0 0;
  border: 6rpx solid #333;
  position: relative;
  z-index: 2;
}

.cap-spots {
  position: absolute;
  width: 100%;
  height: 100%;
}

.spot {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
}

.spot-1 {
  top: 30rpx;
  left: 40rpx;
}

.spot-2 {
  top: 40rpx;
  right: 50rpx;
  width: 25rpx;
  height: 25rpx;
}

.mushroom-stem {
  width: 120rpx;
  height: 100rpx;
  background: white;
  border-radius: 0 0 60rpx 60rpx;
  border: 6rpx solid #333;
  border-top: none;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 1;
}

.stem-face {
  margin-top: 20rpx;
}

.mushroom-shadow {
  width: 140rpx;
  height: 8rpx;
  background: rgba(0, 0, 0, 0.15);
  border-radius: 50%;
  margin-top: 10rpx;
}

/* 太阳样式 */
.icon-sun {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sun-body {
  width: 180rpx;
  height: 180rpx;
  background: linear-gradient(135deg, #ffd54f 0%, #ffb300 100%);
  border-radius: 50%;
  border: 6rpx solid #333;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  animation: sun-rotate 20s linear infinite;
}

.sun-face {
  margin-top: 20rpx;
}

.sun-reflection {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.1) 100%);
  border-radius: 0 0 90rpx 90rpx;
}

.sun-shadow {
  width: 160rpx;
  height: 12rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 50%;
  margin-top: 20rpx;
  animation: shadow-pulse 2s ease-in-out infinite;
}

/* 通用表情样式 */
.eye {
  display: inline-block;
  font-size: 20rpx;
  color: #333;
}

.eye.left {
  margin-right: 20rpx;
}

.mouth {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #333;
  margin-top: 5rpx;
}

/* 动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

@keyframes particle-float {
  0%, 100% {
    transform: translate(0, 0);
    opacity: 0.6;
  }
  50% {
    transform: translate(10rpx, -10rpx);
    opacity: 1;
  }
}

@keyframes star-bounce {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-20rpx) scale(1.05);
  }
}

@keyframes shadow-pulse {
  0%, 100% {
    transform: scaleX(1);
    opacity: 0.2;
  }
  50% {
    transform: scaleX(0.9);
    opacity: 0.3;
  }
}

@keyframes sun-rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
