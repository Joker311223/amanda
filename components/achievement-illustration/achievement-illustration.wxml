  <!-- ‰∏≠Èó¥‰∏ªË¶ÅÂõæÊ†á -->
  <view class="main-icon-wrapper">
    <!-- Ë£ÖÈ•∞ÊÄßÁ≤íÂ≠ê -->
    <view class="particles">
      <view class="particle particle-1" style="background: {{particleColors[0]}}"></view>
      <view class="particle particle-2" style="background: {{particleColors[1]}}"></view>
      <view class="particle particle-3" style="background: {{particleColors[2]}}"></view>
      <view class="particle particle-4" style="background: {{particleColors[3]}}"></view>
      <view class="particle particle-5" style="background: {{particleColors[4]}}"></view>
