          <view class="cactus-arm left">üåµ</view>
          <view class="cactus-arm right">üåµ</view>
        </view>
        <view class="cactus-shadow"></view>
      </view>

      <!-- ËòëËèá -->
      <view wx:elif="{{iconType === 'mushroom'}}" class="icon-mushroom">
        <view class="mushroom-cap">
          <view class="cap-spots">
            <view class="spot spot-1"></view>
            <view class="spot spot-2"></view>
          </view>
        </view>
        <view class="mushroom-stem">
          <view class="stem-face">
            <view class="eye left">‚Ä¢</view>
            <view class="eye right">‚Ä¢</view>
            <view class="mouth">‚Äø</view>
          </view>
        </view>
