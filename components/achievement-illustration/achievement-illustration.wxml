<view class="illustration-container">
  <!-- Â∑¶‰æßÂÆåÊàêÊñáÊ°£ÂõæÊ†á -->
  <view class="documents-group" wx:if="{{showDocuments}}">
    <view class="document-icon" wx:for="{{documentCount}}" wx:key="index">
      <view class="document-circle">
        <view class="document-paper">
          <view class="paper-lines">
            <view class="line"></view>
            <view class="line"></view>
            <view class="line"></view>
          </view>
          <view class="check-mark">‚úì</view>
