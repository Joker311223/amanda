.page-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  padding-top: calc(env(safe-area-inset-top) + 20rpx);
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 70rpx;
  font-weight: 200;
  color: #333;
  line-height: 1;
  margin-left: -10rpx;
}

.nav-score {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.star {
  font-size: 50rpx;
}

.score-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 查看作业按钮 */
.view-assignment-btn {
  background: #4caf50;
  border-radius: 20rpx;
  padding: 35rpx;
  text-align: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.view-assignment-btn text {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

/* 作业题目列表 */
.assignment-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.assignment-item {
  background: #ffffff;
  border: 4rpx solid #4caf50;
  border-radius: 30rpx;
  padding: 30rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 30rpx;
  transition: all 0.3s ease;
}

.assignment-item:active {
  transform: scale(0.98);
  background: #f9f9f9;
}

.item-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  min-width: 50rpx;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.item-subtitle {
  font-size: 28rpx;
  color: #666;
}
