/* 视频播放页面样式 */
.course-header {
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.course-title-card .card-header {
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 1.5;
  padding: 20rpx 30rpx;
  word-break: break-all;
  white-space: normal;
  display: block;
}

.course-title-card .card-header text {
  display: inline-block;
  width: 100%;
}

/* 视频播放区域 */
.video-section {
  padding: 20rpx;
}

.video-container {
  margin-bottom: 30rpx;
}

.video-player {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.video-touch-layer {
  position: relative;
  width: 100%;
  height: 100%;
}

/* 自定义视频控制按钮 */
.custom-video-controls {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.play-pause-btn,
.fullscreen-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.play-pause-btn:active,
.fullscreen-btn:active {
  background: rgba(0, 0, 0, 0.8);
  transform: scale(0.95);
}

.control-icon {
  color: white;
  font-size: 36rpx;
  line-height: 1;
}

/* 全屏控制容器 */
.fullscreen-controls {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  pointer-events: auto;
}

/* 全屏返回按钮 */
.fullscreen-back-btn {
  position: fixed;
  top: 40rpx;
  left: 40rpx;
  z-index: 10000;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.fullscreen-back-btn:active {
  background: rgba(0, 0, 0, 0.8);
  transform: scale(0.95);
}

.back-icon {
  color: white;
  font-size: 56rpx;
  font-weight: bold;
  line-height: 1;
}

/* 全屏时的播放/暂停按钮 */
.fullscreen-play-btn {
  position: fixed;
  bottom: 60rpx;
  right: 60rpx;
  z-index: 10000;
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.fullscreen-play-btn:active {
  background: rgba(0, 0, 0, 0.8);
  transform: scale(0.95);
}

.fullscreen-play-btn .control-icon {
  font-size: 48rpx;
}

.video-placeholder {
  position: relative;
  height: 400rpx;
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
}

.play-button {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
}

.play-button:active {
  background: rgba(255, 255, 255, 0.3);
}

.video-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}

.video-controls {
  padding: 30rpx;
  background: white;
}

.progress-container {
  margin-bottom: 20rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #E9ECEF;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-fill {
  height: 100%;
  background: #6BBF59;
  transition: width 0.3s ease;
}

.time-display {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  display: block;
}

.control-buttons {
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

.control-btn {
  padding: 15rpx 25rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  background: white;
  font-size: 24rpx;
  color: #333;
}

.control-btn:disabled {
  opacity: 0.5;
  color: #999;
}

.control-btn:not(:disabled):active {
  background: #f0f0f0;
}

/* 笔记区域 */
.notes-section {
  margin-bottom: 30rpx;
}

.notes-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #E9ECEF;
  border-radius: 15rpx;
  font-size: 26rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

.notes-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.char-count {
  font-size: 22rpx;
  color: #999;
}

.notes-actions {
  display: flex;
  gap: 20rpx;
}

.cancel-btn {
  font-size: 24rpx;
  padding: 12rpx 24rpx;
}

.save-notes-btn {
  font-size: 24rpx;
  padding: 12rpx 24rpx;
}

/* 笔记列表 */
.notes-list-section {
  margin-bottom: 30rpx;
}

.notes-list-header {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #E9ECEF;
  margin-bottom: 20rpx;
}

.notes-count {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.notes-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.note-item {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.note-content {
  margin-bottom: 15rpx;
}

.note-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  word-break: break-all;
}

.note-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 15rpx;
  border-top: 1rpx solid #F5F5F5;
}

.note-time {
  font-size: 22rpx;
  color: #999;
}

.note-actions {
  display: flex;
  gap: 15rpx;
  width: 300rpx;
}

.btn-icon {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  border: none;
  background: transparent;
  color: #666;
  display: flex;
  align-items: center;
  gap: 5rpx;
}

.btn-icon::after {
  border: none;
}

.edit-btn {
  color: #1890ff;
}

.delete-btn {
  color: #ff4d4f;
}

/* 完成学习按钮 */
.complete-section {
  text-align: center;
}

.complete-btn {
  width: 100%;
  font-size: 32rpx;
  padding: 25rpx;
}

.complete-btn[disabled] {
  background: #cccccc !important;
  color: #999999 !important;
}

/* 完成弹窗 */
.completion-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  width: 600rpx;
  background: linear-gradient(135deg, #58cc02 0%, #7ed321 100%);
  border-radius: 40rpx;
  padding: 80rpx 60rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: slideUp 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  position: relative;
  overflow: visible;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 庆祝图标区域 */
.completion-modal .celebration-icon {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  position: relative;
}

/* 冰淇淋 */
.completion-modal .ice-cream {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 2;
}

/* 冰淇淋球 */
.ice-cream-scoops {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  margin-bottom: -20rpx;
}

.scoop {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 6rpx solid #333;
  animation: scoopBounce 0.6s ease infinite alternate;
}

.scoop.yellow {
  background: linear-gradient(135deg, #FFD93D 0%, #FFC107 100%);
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  z-index: 3;
  animation-delay: 0s;
}

.scoop.blue {
  background: linear-gradient(135deg, #6DD5FA 0%, #2980B9 100%);
  top: 40rpx;
  left: 0;
  z-index: 2;
  animation-delay: 0.1s;
}

.scoop.orange {
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B6B 100%);
  top: 40rpx;
  right: 0;
  z-index: 2;
  animation-delay: 0.2s;
}

@keyframes scoopBounce {
  0% {
    transform: translateY(0);
  }
  100% {
    transform: translateY(-10rpx);
  }
}

/* 冰淇淋筒 */
.ice-cream-cone {
  width: 120rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #FFF 0%, #F5F5F5 100%);
  border: 6rpx solid #333;
  border-radius: 0 0 60rpx 60rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: inset 0 -20rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 冰淇淋筒的表情 */
.cone-face {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15rpx;
  margin-top: 20rpx;
}

.cone-eye {
  width: 12rpx;
  height: 12rpx;
  background: #333;
  border-radius: 50%;
  position: absolute;
  top: 40rpx;
}

.cone-eye.left {
  left: 30rpx;
}

.cone-eye.right {
  right: 30rpx;
}

.cone-mouth {
  font-size: 32rpx;
  color: #333;
  margin-top: 30rpx;
}

/* 装饰粒子 */
.decoration-particles {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
}

.particle {
  position: absolute;
  animation: float 3s ease-in-out infinite;
}

.particle.star {
  font-size: 40rpx;
  animation: twinkle 2s ease-in-out infinite;
}

.particle.circle {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  animation: float 2.5s ease-in-out infinite;
}

.particle.plus {
  font-size: 36rpx;
  font-weight: bold;
  animation: rotate 4s linear infinite;
}

.particle.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-20rpx) rotate(180deg);
  }
}

@keyframes twinkle {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.5;
    transform: scale(1.2);
  }
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.5);
    opacity: 0.5;
  }
}

/* 分数显示 */
.points-display {
  display: flex;
  align-items: baseline;
  margin-bottom: 30rpx;
  animation: scaleIn 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) 0.3s backwards;
}

@keyframes scaleIn {
  from {
    transform: scale(0);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.points-number {
  font-size: 140rpx;
  font-weight: bold;
  color: #ffffff;
  line-height: 1;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.points-unit {
  font-size: 60rpx;
  font-weight: bold;
  color: #ffffff;
  margin-left: 10rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 完成消息 */
.completion-message {
  margin-bottom: 50rpx;
  animation: fadeInUp 0.5s ease 0.4s backwards;
}

@keyframes fadeInUp {
  from {
    transform: translateY(20rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.completion-message text {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 500;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* 继续按钮 */
.continue-btn {
  width: 100%;
  background: #ffffff;
  color: #58cc02;
  font-size: 36rpx;
  font-weight: bold;
  padding: 28rpx;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  animation: fadeInUp 0.5s ease 0.5s backwards;
}

.continue-btn::after {
  border: none;
}

.continue-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 全屏按钮响应式调整 */
@media screen and (max-width: 375px) {
  .fullscreen-back-btn,
  .fullscreen-play-btn {
    width: 80rpx;
    height: 80rpx;
  }

  .fullscreen-back-btn {
    top: 30rpx;
    left: 30rpx;
  }

  .fullscreen-play-btn {
    bottom: 50rpx;
    right: 50rpx;
    width: 100rpx;
    height: 100rpx;
  }

  .back-icon {
    font-size: 48rpx;
  }
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .video-placeholder {
    height: 300rpx;
  }

  .play-button {
    width: 100rpx;
    height: 100rpx;
    font-size: 40rpx;
  }

  .video-title {
    font-size: 28rpx;
  }

  /* 完成弹窗响应式 */
  .modal-content {
    width: 540rpx;
    padding: 60rpx 40rpx 50rpx;
  }

  .completion-modal .celebration-icon {
    height: 260rpx;
  }

  .ice-cream-scoops {
    width: 160rpx;
    height: 160rpx;
  }

  .scoop {
    width: 90rpx;
    height: 90rpx;
  }

  .ice-cream-cone {
    width: 110rpx;
    height: 130rpx;
  }

  .points-number {
    font-size: 120rpx;
  }

  .points-unit {
    font-size: 50rpx;
  }

  .completion-message text {
    font-size: 28rpx;
  }

  .continue-btn {
    font-size: 32rpx;
    padding: 24rpx;
  }
}
