/* 视频播放页面样式 */
.course-header {
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.course-title-card .card-header {
  text-align: center;
  font-size: 32rpx;
}

/* 完成状态样式 */
.completion-section {
  padding: 20rpx;
}

.completion-content {
  text-align: center;
  padding: 40rpx 20rpx;
}

.celebration-icon {
  position: relative;
  margin-bottom: 40rpx;
}

.ice-cream {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
}

.sparkles {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 200rpx;
  height: 200rpx;
}

.sparkle {
  position: absolute;
  font-size: 24rpx;
  animation: sparkle 2s infinite;
}

.sparkle:nth-child(1) {
  top: 20rpx;
  left: 20rpx;
  animation-delay: 0s;
}

.sparkle:nth-child(2) {
  top: 30rpx;
  right: 30rpx;
  animation-delay: 0.4s;
}

.sparkle:nth-child(3) {
  bottom: 40rpx;
  left: 40rpx;
  animation-delay: 0.8s;
}

.sparkle:nth-child(4) {
  bottom: 30rpx;
  right: 20rpx;
  animation-delay: 1.2s;
}

.sparkle:nth-child(5) {
  top: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  animation-delay: 1.6s;
}

@keyframes sparkle {
  0%, 100% {
    opacity: 0;
    transform: scale(0.5);
  }
  50% {
    opacity: 1;
    transform: scale(1);
  }
}

.completion-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #6BBF59;
  margin-bottom: 30rpx;
}

.completion-desc {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.experience-gained {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.encouragement {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.completion-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.completion-actions .btn {
  flex: 1;
  max-width: 200rpx;
}

/* 经验获得样式 */
.experience-section {
  padding: 20rpx;
}

.experience-content {
  text-align: center;
  padding: 60rpx 20rpx;
}

.experience-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.experience-title {
  display: block;
  font-size: 72rpx;
  font-weight: bold;
  color: #6BBF59;
  margin-bottom: 20rpx;
}

.experience-subtitle {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 40rpx;
}

.experience-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.experience-actions .btn {
  flex: 1;
  max-width: 200rpx;
}

/* 视频播放区域 */
.video-section {
  padding: 20rpx;
}

.video-container {
  margin-bottom: 30rpx;
}

.video-player {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.video-placeholder {
  position: relative;
  height: 400rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
}

.play-button {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
}

.play-button:active {
  background: rgba(255, 255, 255, 0.3);
}

.video-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}

.video-controls {
  padding: 30rpx;
  background: white;
}

.progress-container {
  margin-bottom: 20rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #E9ECEF;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-fill {
  height: 100%;
  background: #6BBF59;
  transition: width 0.3s ease;
}

.time-display {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  display: block;
}

.control-buttons {
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

.control-btn {
  padding: 15rpx 25rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  background: white;
  font-size: 24rpx;
  color: #333;
}

.control-btn:disabled {
  opacity: 0.5;
  color: #999;
}

.control-btn:not(:disabled):active {
  background: #f0f0f0;
}

/* 笔记区域 */
.notes-section {
  margin-bottom: 30rpx;
}

.notes-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #E9ECEF;
  border-radius: 15rpx;
  font-size: 26rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

.notes-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.char-count {
  font-size: 22rpx;
  color: #999;
}

.save-notes-btn {
  font-size: 24rpx;
  padding: 12rpx 24rpx;
}

/* 完成学习按钮 */
.complete-section {
  text-align: center;
}

.complete-btn {
  width: 100%;
  font-size: 32rpx;
  padding: 25rpx;
}

.complete-btn[disabled] {
  background: #cccccc !important;
  color: #999999 !important;
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .completion-title {
    font-size: 40rpx;
  }

  .experience-title {
    font-size: 60rpx;
  }

  .video-placeholder {
    height: 300rpx;
  }

  .play-button {
    width: 100rpx;
    height: 100rpx;
    font-size: 40rpx;
  }

  .video-title {
    font-size: 28rpx;
  }
}
