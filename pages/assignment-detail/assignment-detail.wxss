/* 作业详情页 - DBT练习表单 */
.assignment-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #F0F9FF 0%, #FFFFFF 100%);
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #6BBF59 0%, #5AA84A 100%);
  padding: 40rpx 30rpx;
  color: white;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.category {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 导语部分 */
.guide-section {
  margin: 30rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  padding: 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.guide-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #6BBF59;
  margin-bottom: 15rpx;
}

.guide-content {
  font-size: 26rpx;
  line-height: 1.8;
  color: #666;
}

/* 表单部分 */
.form-section {
  padding: 0 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.field-group {
  background: white;
  border-radius: 16rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.field-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.5;
}

/* 输入框 */
.field-input {
  width: 100%;
  height: 80rpx;
  background: #F5F5F5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #333;
}

/* 文本域 */
.field-textarea {
  width: 100%;
  min-height: 150rpx;
  background: #F5F5F5;
  border-radius: 12rpx;
  padding: 15rpx 20rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

/* 单选框组 */
.radio-group {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.radio-group.inline {
  flex-direction: row;
  gap: 30rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 26rpx;
  color: #666;
  padding: 10rpx 0;
}

.radio-item radio {
  transform: scale(1.1);
}

/* 复选框组 */
.checkbox-group {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.checkbox-item {
  display: flex;
  align-items: flex-start;
  gap: 10rpx;
  font-size: 24rpx;
  color: #666;
  padding: 8rpx 0;
  line-height: 1.6;
}

.checkbox-item checkbox {
  margin-top: 4rpx;
  transform: scale(1.1);
}

/* 子输入框 */
.sub-input {
  margin-top: 15rpx;
  padding-left: 10rpx;
  border-left: 4rpx solid #6BBF59;
}

/* 提交按钮 */
.submit-section {
  margin: 40rpx 20rpx;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  background: #CCCCCC;
  color: white;
  border-radius: 45rpx;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.submit-btn.active {
  background: linear-gradient(135deg, #6BBF59 0%, #5AA84A 100%);
}

.submit-btn:active {
  transform: scale(0.98);
}

/* 已完成部分 */
.completed-section {
  margin: 30rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.completed-header {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.completed-icon {
  font-size: 40rpx;
}

.completed-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #6BBF59;
}

.completed-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 25rpx;
}

.completed-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.completed-item {
  padding: 20rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
}

.completed-label {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.completed-value {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.checkbox-value {
  display: block;
  margin: 5rpx 0;
}

.sub-text {
  color: #6BBF59;
  margin-left: 10rpx;
}

/* 无模板提示 */
.no-template {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.no-template-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.no-template-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.no-template-desc {
  font-size: 24rpx;
  color: #999;
}
