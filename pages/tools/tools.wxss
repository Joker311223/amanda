/* 工具页面样式 */
.page-header {
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.header-card .card-header {
  text-align: center;
  font-size: 36rpx;
}

/* 分类筛选样式 */
.category-section {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.category-scroll {
  white-space: nowrap;
}

.category-tabs {
  display: inline-flex;
  background: white;
  border-radius: 15rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.category-tab {
  padding: 15rpx 20rpx;
  font-size: 24rpx;
  color: #666;
  border-radius: 10rpx;
  white-space: nowrap;
  margin-right: 8rpx;
  transition: all 0.3s ease;
}

.category-tab:last-child {
  margin-right: 0;
}

.category-tab.active {
  background: #6BBF59;
  color: white;
  font-weight: bold;
}

/* 技能卡片网格 */
.cards-section {
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.cards-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.skill-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
  position: relative;
  overflow: hidden;
  min-height: 280rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.skill-card:active {
  transform: scale(0.95);
}

.skill-card-bg {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  height: 90%;
  opacity: 1;
  z-index: 1;
}

.skill-card-content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 20rpx;
}

.skill-card-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.4;
  text-align: center;
}

.skill-card-category {
  font-size: 22rpx;
  color: #666;
  line-height: 1.3;
  text-align: center;
}

/* 快捷入口样式 */
.quick-entry-section {
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.quick-entries {
  padding: 0;
}

.quick-entry-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.quick-entry-item:last-child {
  border-bottom: none;
}

.quick-entry-item:active {
  background: #f8f9fa;
  margin: 0 -30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.quick-entry-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.emotion-icon {
  background: #FCE4EC;
}

.practice-icon {
  background: #E8F5E8;
}

.breathing-icon {
  background: #E3F2FD;
}

.quick-entry-info {
  flex: 1;
}

.quick-entry-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.quick-entry-desc {
  font-size: 22rpx;
  color: #666;
}

.quick-entry-arrow {
  font-size: 32rpx;
  color: #ccc;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 图片预览弹窗 */
.image-preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.95);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.image-preview-modal.show {
  opacity: 1;
  visibility: visible;
}

.preview-container {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 关闭按钮 */
.close-btn {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10001;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.close-btn:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.3);
}

.close-btn text {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: 300;
  line-height: 1;
}

/* 图片轮播 */
.image-swiper {
  width: 100%;
  height: 100%;
}

.swiper-item-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 20rpx;
}

.movable-area {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

.movable-view {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-image {
  width: 100%;
  height: 100%;
  animation: imageZoomIn 0.3s ease;
  pointer-events: none;
  margin-left: -80rpx;
}

@keyframes imageZoomIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 图片计数器 */
.image-counter {
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  backdrop-filter: blur(10rpx);
  z-index: 10001;
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .category-tab {
    font-size: 22rpx;
    padding: 12rpx 16rpx;
  }

  .cards-grid {
    gap: 15rpx;
  }

  .skill-card {
    padding: 25rpx 15rpx;
    min-height: 240rpx;
  }

  .skill-card-title {
    font-size: 28rpx;
  }

  .skill-card-category {
    font-size: 20rpx;
  }

  .quick-entry-title {
    font-size: 26rpx;
  }

  .quick-entry-desc {
    font-size: 20rpx;
  }

  .close-btn {
    top: 30rpx;
    right: 30rpx;
    width: 60rpx;
    height: 60rpx;
  }

  .close-btn text {
    font-size: 36rpx;
  }

  .swiper-item-wrapper {
    padding: 80rpx 30rpx;
  }

  .image-counter {
    bottom: 40rpx;
    font-size: 24rpx;
    padding: 10rpx 24rpx;
  }
}
