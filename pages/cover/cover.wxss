/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #6BBF59 0%, #5AA84A 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.background-decoration {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 0;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.1;
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  background: #ffffff;
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  background: #ffffff;
  bottom: -50rpx;
  left: -50rpx;
}

.circle-3 {
  width: 250rpx;
  height: 250rpx;
  background: #ffffff;
  top: 50%;
  left: 10%;
}

/* 内容包装器 */
.content-wrapper {
  position: relative;
  z-index: 1;
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Logo 区域 */
.logo-section {
  margin-bottom: 40rpx;
}

.logo-icon {
  font-size: 120rpx;
  display: block;
  text-align: center;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

/* 标题区域 */
.title-section {
  text-align: center;
  margin-bottom: 50rpx;
}

.main-title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
  line-height: 1.2;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

/* 说明信息 */
.description-section {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  backdrop-filter: blur(10px);
  width: 100%;
}

.description-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #ffffff;
}

.description-item:last-child {
  margin-bottom: 0;
}

.description-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  display: block;
  min-width: 40rpx;
}

.description-text {
  font-size: 26rpx;
  line-height: 1.4;
}

/* 核心模块 */
.modules-section {
  width: 100%;
  margin-bottom: 50rpx;
}

.modules-title {
  display: block;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 30rpx;
}

.modules-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.module-card {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.module-card:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.module-emoji {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  display: block;
}

.module-name {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
  text-align: center;
}

/* 联系方式 */
.contact-section {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  backdrop-filter: blur(10px);
  width: 100%;
}

.contact-title {
  display: block;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 24rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #ffffff;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  display: block;
  min-width: 40rpx;
  text-align: center;
}

.contact-text {
  font-size: 26rpx;
  line-height: 1.4;
  font-weight: 500;
}

/* 底部说明 */
.footer-section {
  text-align: center;
  width: 100%;
}

.footer-text {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.version-text {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .page-container {
    padding: 20rpx;
  }

  .experience-badge {
    top: 20rpx;
    right: 20rpx;
    padding: 12rpx 20rpx;
    font-size: 26rpx;
  }

  .star {
    font-size: 28rpx;
  }

  .lead-section {
    padding: 24rpx;
    margin-bottom: 24rpx;
  }

  .lead-text {
    font-size: 26rpx;
  }

  .title-card {
    padding: 40rpx 30rpx;
    border-radius: 30rpx;
  }

  .title-text {
    font-size: 40rpx;
  }

  .problem-item {
    padding: 30rpx 40rpx;
    border-radius: 40rpx;
  }

  .problem-number {
    width: 70rpx;
    height: 70rpx;
    font-size: 36rpx;
  }

  .problem-label,
  .answer-label {
    font-size: 22rpx;
  }

  .problem-title {
    font-size: 28rpx;
  }

  .problem-answer {
    font-size: 26rpx;
  }

  .top-actions {
    padding: 20rpx 0;
  }

  .action-btn {
    font-size: 28rpx;
  }
}
