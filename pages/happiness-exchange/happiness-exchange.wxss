/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #e8f4f8 100%);
  display: flex;
  flex-direction: column;
}

/* 顶部头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 16rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
}

.back-btn::after {
  border: none;
}

.back-icon {
  font-size: 28rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.header-spacer {
  width: 60rpx;
}

/* 主要内容 */
.content {
  flex: 1;
  padding: 30rpx 20rpx;
  overflow-y: auto;
}

/* 卡片通用样式 */
.current-happiness-card,
.available-experience-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  animation: slideInUp 0.5s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.card-icon {
  font-size: 36rpx;
}

.card-title {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 快乐分显示 */
.happiness-display {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.happiness-number {
  font-size: 60rpx;
  font-weight: bold;
  color: #667eea;
}

.happiness-unit {
  font-size: 28rpx;
  color: #999;
}

/* 经验值显示 */
.experience-display {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.experience-number {
  font-size: 60rpx;
  font-weight: bold;
  color: #ffd700;
}

.experience-unit {
  font-size: 28rpx;
  color: #999;
}

.exchange-rate-info {
  font-size: 24rpx;
  color: #999;
  padding: 12rpx 16rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

/* 兑换部分 */
.exchange-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.max-info {
  font-size: 22rpx;
  color: #999;
  font-weight: normal;
}

/* 滑块容器 */
.slider-container {
  margin-bottom: 30rpx;
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
  font-size: 24rpx;
  color: #999;
}

.happiness-slider {
  width: 100%;
  margin-bottom: 20rpx;
}

.slider-value-display {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 8rpx;
  padding: 15rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

.selected-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
}

.selected-unit {
  font-size: 24rpx;
  color: #999;
}

/* 快速选择按钮 */
.quick-select-buttons {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
}

.quick-btn {
  padding: 12rpx 16rpx;
  background: #f5f5f5;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
}

.quick-btn::after {
  border: none;
}

.quick-btn:active {
  background: #667eea;
  color: white;
  border-color: #667eea;
  transform: scale(0.95);
}

/* 兑换预览 */
.exchange-preview {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  color: white;
}

.preview-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.preview-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.preview-value {
  font-size: 40rpx;
  font-weight: bold;
}

.preview-arrow {
  font-size: 36rpx;
  opacity: 0.8;
}

/* 兑换按钮 */
.exchange-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  width: 100%;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.exchange-btn::after {
  border: none;
}

.exchange-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.btn-icon {
  font-size: 32rpx;
  animation: twinkle 1.5s ease-in-out infinite;
}

@keyframes twinkle {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.2);
  }
}

.btn-text {
  font-size: 28rpx;
}

/* 动画层 */
.animation-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.animation-container {
  position: relative;
  width: 300rpx;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 兑换动画 */
.exchange-animation {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.animation-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.animation-icon {
  font-size: 80rpx;
  animation: bounce-animation 0.8s ease-in-out infinite;
}

@keyframes bounce-animation {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

.animation-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
}

/* 粒子效果 */
.particles {
  position: absolute;
  width: 100%;
  height: 100%;
}

.particle {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  background: #667eea;
  border-radius: 50%;
  animation: particle-float 1.5s ease-out forwards;
}

@keyframes particle-float {
  0% {
    opacity: 1;
    transform: translate(0, 0) scale(1);
  }
  100% {
    opacity: 0;
    transform: translate(var(--tx), var(--ty)) scale(0);
  }
}

.particle:nth-child(1) {
  --tx: 80rpx;
  --ty: -80rpx;
}

.particle:nth-child(2) {
  --tx: -80rpx;
  --ty: -80rpx;
}

.particle:nth-child(3) {
  --tx: 100rpx;
  --ty: 80rpx;
}

.particle:nth-child(4) {
  --tx: -100rpx;
  --ty: 80rpx;
}

.particle:nth-child(5) {
  --tx: 0;
  --ty: -120rpx;
}

.particle:nth-child(6) {
  --tx: 0;
  --ty: 120rpx;
}

/* 成功提示 */
.success-message {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15rpx;
  animation: successPop 0.6s ease-out;
}

@keyframes successPop {
  0% {
    opacity: 0;
    transform: scale(0.5);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.success-icon {
  font-size: 80rpx;
  animation: spin 0.8s ease-in-out;
}

@keyframes spin {
  0% {
    transform: rotate(0deg) scale(0.5);
  }
  50% {
    transform: rotate(180deg) scale(1.1);
  }
  100% {
    transform: rotate(360deg) scale(1);
  }
}

.success-text {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .content {
    padding: 20rpx 15rpx;
  }

  .current-happiness-card,
  .available-experience-card,
  .exchange-section {
    padding: 20rpx;
  }

  .happiness-number,
  .experience-number {
    font-size: 48rpx;
  }

  .exchange-btn {
    padding: 16rpx;
    font-size: 26rpx;
  }

  .quick-select-buttons {
    grid-template-columns: repeat(2, 1fr);
  }
}
