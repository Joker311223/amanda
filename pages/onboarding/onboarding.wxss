/* 引导页面样式 */
.intro-container {
  padding: 20rpx;
}

.intro-text {
  line-height: 1.6;
}

.greeting {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.description {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.dbt-intro {
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.section-content {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.skills-intro {
  margin-bottom: 40rpx;
}

.skill-item {
  margin-bottom: 25rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  border-left: 4rpx solid #6BBF59;
}

.skill-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #6BBF59;
  margin-bottom: 10rpx;
}

.skill-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.conclusion {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

/* 用户信息收集样式 */
.user-info-container {
  padding: 20rpx;
}

.picker-input {
  display: flex;
  align-items: center;
  color: #333;
}

.picker-input:empty::before {
  content: attr(placeholder);
  color: #999;
}

.start-journey-btn {
  margin-top: 40rpx;
  font-size: 30rpx;
  padding: 25rpx;
}

.start-journey-btn[disabled] {
  background: #cccccc !important;
  color: #999999 !important;
}

.form-hint {
  display: block;
  font-size: 22rpx;
  margin-top: 8rpx;
  padding-left: 10rpx;
  line-height: 1.5;
}

.error-hint {
  color: #ff4d4f;
  font-weight: 500;
}

.info-hint {
  color: #1890ff;
}

.required-mark {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-left: 4rpx;
}

.input-error {
  border-color: #ff4d4f !important;
  background-color: #fff1f0 !important;
}

.selector-error {
  border-color: #ff4d4f !important;
}

.contact-info {
  margin-top: 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #ffffff;
  border-radius: 24rpx;
  width: 90%;
  max-width: 600rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

.modal-body {
  padding: 30rpx;
}

.welcome-text {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.welcome-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.contact-section {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border-left: 4rpx solid #6BBF59;
}

.contact-section .section-title {
  font-size: 26rpx;
  margin-bottom: 16rpx;
  color: #333;
}

.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 24rpx;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-label {
  color: #666;
  margin-right: 12rpx;
  min-width: 100rpx;
}

.contact-value {
  color: #6BBF59;
  font-weight: bold;
}

.group-section {
  padding: 20rpx;
  background: #f0f9ff;
  border-radius: 16rpx;
  border-left: 4rpx solid #1890ff;
}

.group-section .section-title {
  font-size: 26rpx;
  margin-bottom: 12rpx;
  color: #333;
}

.group-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.modal-footer {
  padding: 20rpx 30rpx 30rpx;
  display: flex;
  justify-content: center;
}

.modal-footer .btn {
  width: 100%;
  max-width: 400rpx;
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .greeting {
    font-size: 28rpx;
  }

  .section-title {
    font-size: 26rpx;
  }

  .skill-title {
    font-size: 24rpx;
  }

  .modal-content {
    width: 95%;
  }

  .modal-header {
    padding: 24rpx 20rpx 16rpx;
  }

  .modal-title {
    font-size: 32rpx;
  }

  .modal-body {
    padding: 20rpx;
  }

  .welcome-text {
    font-size: 24rpx;
  }

  .welcome-desc {
    font-size: 20rpx;
  }

  .contact-section,
  .group-section {
    padding: 16rpx;
  }

  .contact-section .section-title,
  .group-section .section-title {
    font-size: 22rpx;
  }

  .contact-item {
    font-size: 20rpx;
  }

  .group-desc {
    font-size: 20rpx;
  }

  .modal-footer {
    padding: 16rpx 20rpx 20rpx;
  }
}
