/* 首页样式 */
.welcome-section {
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.welcome-card {
  background: linear-gradient(135deg, #6BBF59 0%, #5AA84A 100%);
  color: white;
}

.welcome-content {
  padding: 40rpx 30rpx;
  text-align: center;
}

.welcome-text {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1.4;
}

/* 进度区域 */
.progress-section {
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.progress-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.progress-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.progress-subtitle {
  font-size: 26rpx;
  color: #666;
}

.progress-map {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.progress-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #6BBF59;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.overall-progress {
  border-top: 1rpx solid #E9ECEF;
  padding-top: 30rpx;
}

.progress-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  text-align: center;
}

.progress-text {
  display: block;
  font-size: 24rpx;
  color: #6BBF59;
  text-align: center;
  margin-top: 10rpx;
  font-weight: bold;
}

/* 快捷操作 */
.quick-actions {
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.action-card {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  margin-bottom: 15rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.action-card:active {
  background: #f8f9fa;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
}

.learning-icon {
  background: #E3F2FD;
}

.assignment-icon {
  background: #FFF3E0;
}

.tools-icon {
  background: #E8F5E8;
}

.emotion-icon {
  background: #FCE4EC;
}

.action-content {
  flex: 1;
}

.action-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #666;
}

.action-arrow {
  font-size: 32rpx;
  color: #ccc;
  font-weight: bold;
}

/* 最近学习 */
.recent-section {
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.recent-courses {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.recent-course-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.recent-course-item:last-child {
  border-bottom: none;
}

.recent-course-item:active {
  background: #f8f9fa;
}

.course-thumbnail {
  width: 80rpx;
  height: 80rpx;
  border-radius: 15rpx;
  background: #6BBF59;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.course-category-icon {
  font-size: 40rpx;
}

.course-info {
  flex: 1;
}

.course-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.course-category {
  font-size: 24rpx;
  color: #666;
}

.course-status {
  margin-left: 20rpx;
}

/* 激励信息 */
.motivation-section {
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.motivation-card {
  background: linear-gradient(135deg, #FFD54F 0%, #FFC107 100%);
  color: #333;
}

.motivation-content {
  padding: 30rpx;
  text-align: center;
}

.motivation-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.motivation-text {
  font-size: 26rpx;
  line-height: 1.5;
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .welcome-text {
    font-size: 28rpx;
  }

  .progress-title {
    font-size: 32rpx;
  }

  .stat-number {
    font-size: 40rpx;
  }

  .action-title {
    font-size: 26rpx;
  }
}
