/* Duolingo风格学习路径 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f7f9fc 0%, #e8f4f8 100%);
  position: relative;
  overflow: hidden;
}

/* 顶部积分显示 */
.header {
  position: relative;
  padding: 30rpx 40rpx 20rpx;
  display: flex;
  justify-content: flex-end;
}

.score-display {
  display: flex;
  align-items: center;
  gap: 15rpx;
  background: white;
  padding: 15rpx 30rpx;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 3rpx dashed #e0e0e0;
}

.star-icon {
  font-size: 50rpx;
  animation: star-rotate 3s ease-in-out infinite;
}

@keyframes star-rotate {
  0%, 100% { transform: rotate(0deg) scale(1); }
  50% { transform: rotate(15deg) scale(1.1); }
}

.score-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 进度条区域 */
.progress-section {
  padding: 20rpx 40rpx;
  position: relative;
}

.progress-label {
  display: inline-block;
  background: #58cc02;
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  padding: 12rpx 30rpx;
  border-radius: 30rpx 30rpx 30rpx 0;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(88, 204, 2, 0.3);
}

.progress-bar-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.progress-bar {
  flex: 1;
  height: 50rpx;
  background: #e5e5e5;
  border-radius: 25rpx;
  position: relative;
  overflow: visible;
  border: 3rpx solid white;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #58cc02 0%, #7ed321 100%);
  border-radius: 25rpx;
  transition: width 0.5s ease;
  position: relative;
}

.progress-indicator {
  position: absolute;
  top: 50%;
  transform: translate(-50%, -50%);
  transition: left 0.5s ease;
  z-index: 10;
}

.indicator-circle {
  width: 70rpx;
  height: 70rpx;
  background: white;
  border-radius: 50%;
  border: 8rpx solid #58cc02;
  box-shadow: 0 4rpx 12rpx rgba(88, 204, 2, 0.4);
  position: relative;
}

.indicator-circle::before {
  content: '';
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  background: #58cc02;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.progress-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  min-width: 100rpx;
  text-align: right;
}

/* 路径滚动区域 */
.roadmap-scroll {
  height: calc(100vh - 280rpx);
  padding: 40rpx 0;
}

.roadmap-container {
  position: relative;
  min-height: 100%;
  padding: 0 40rpx 200rpx;
}

/* 关卡节点 */
.level-node {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  transition: all 0.3s ease;
}

.level-node:active {
  transform: scale(0.95);
}

.node-border {
  width: 100%;
  height: 100%;
  border: 4rpx dashed #d0d0d0;
  border-radius: 20rpx;
  padding: 15rpx;
  background: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.level-node.current .node-border {
  border-color: #ffc800;
  border-style: solid;
  box-shadow: 0 8rpx 20rpx rgba(255, 200, 0, 0.3);
  animation: pulse-border 2s ease-in-out infinite;
}

@keyframes pulse-border {
  0%, 100% {
    border-color: #ffc800;
    box-shadow: 0 8rpx 20rpx rgba(255, 200, 0, 0.3);
  }
  50% {
    border-color: #ffdd00;
    box-shadow: 0 12rpx 30rpx rgba(255, 200, 0, 0.5);
  }
}

.level-node.completed .node-border {
  border-color: #58cc02;
  background: linear-gradient(135deg, #f0fff0 0%, #e8f8e8 100%);
}

.level-node.locked .node-border {
  opacity: 0.5;
  background: #f5f5f5;
}

.node-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* 文档类型图标 */
.lesson-icon {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #58cc02 0%, #7ed321 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 6rpx 15rpx rgba(88, 204, 2, 0.3);
}

.document-icon {
  width: 60rpx;
  height: 70rpx;
  background: white;
  border-radius: 8rpx;
  padding: 12rpx 10rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  position: relative;
}

.doc-lines {
  width: 100%;
  height: 4rpx;
  background: #58cc02;
  border-radius: 2rpx;
}

.check-mark {
  position: absolute;
  bottom: -10rpx;
  right: -10rpx;
  width: 50rpx;
  height: 50rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #58cc02;
  font-weight: bold;
  border: 4rpx solid #58cc02;
  box-shadow: 0 4rpx 10rpx rgba(88, 204, 2, 0.3);
}

/* 角色类型图标 */
.character-icon {
  width: 150rpx;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.character-emoji {
  font-size: 100rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.15));
}

/* 装饰星星 */
.decoration-stars {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.deco-star {
  position: absolute;
  font-size: 30rpx;
  animation: twinkle-star 2s ease-in-out infinite;
}

.star-1 {
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  animation-delay: 0s;
}

.star-2 {
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  animation-delay: 0.5s;
}

.star-3 {
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  animation-delay: 1s;
}

.star-4 {
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  animation-delay: 1.5s;
}

@keyframes twinkle-star {
  0%, 100% {
    opacity: 0.3;
    transform: translate(0, 0) scale(0.8);
  }
  50% {
    opacity: 1;
    transform: translate(0, 0) scale(1.2);
  }
}

/* 锁定覆盖层 */
.lock-overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 10rpx;
  z-index: 10;
}

.lock-icon {
  font-size: 60rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .level-node {
    width: 180rpx;
    height: 180rpx;
  }

  .character-emoji {
    font-size: 90rpx;
  }

  .lesson-icon {
    width: 110rpx;
    height: 110rpx;
  }
}
