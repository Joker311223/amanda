/* Duolingo风格学习路径 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f7f9fc 0%, #e8f4f8 100%);
  position: relative;
  overflow: hidden;
}

/* 顶部积分显示 */
.header {
  position: relative;
  padding: 30rpx 40rpx 20rpx;
  display: flex;
  justify-content: flex-end;
}

.item-image-mini{
  margin-top: 12rpx;
  margin-left: 20rpx;
  width:70rpx;
  height: 90rpx;
}

.item-image-mini.available {
  animation: shake-mini 2s ease-in-out infinite;
}

.item-image{
    margin-left: 20rpx;
  width: 120rpx;
  height: 120rpx;
}

.item-image.available {
  animation: shake-bounce 2.5s ease-in-out infinite;
}

/* 作业图标抖动动画 - 轻微摇摆 */
@keyframes shake-mini {
  0%, 100% {
    transform: rotate(0deg) scale(1);
  }
  10% {
    transform: rotate(-8deg) scale(1.05);
  }
  20% {
    transform: rotate(8deg) scale(1.05);
  }
  30% {
    transform: rotate(-8deg) scale(1.05);
  }
  40% {
    transform: rotate(8deg) scale(1.05);
  }
  50% {
    transform: rotate(0deg) scale(1);
  }
}

/* 课程图标抖动动画 - 弹跳+摇摆 */
@keyframes shake-bounce {
  0%, 100% {
    transform: translateY(0) rotate(0deg) scale(1);
  }
  5% {
    transform: translateY(-8rpx) rotate(-5deg) scale(1.05);
  }
  10% {
    transform: translateY(-12rpx) rotate(5deg) scale(1.08);
  }
  15% {
    transform: translateY(-8rpx) rotate(-5deg) scale(1.05);
  }
  20% {
    transform: translateY(0) rotate(0deg) scale(1);
  }
  25% {
    transform: translateY(-4rpx) rotate(3deg) scale(1.02);
  }
  30% {
    transform: translateY(0) rotate(0deg) scale(1);
  }
}

.page-line {
  margin-bottom: 30rpx;
  height: 300rpx;
  width: 100%;
  display: flex; 
  align-items: center; 
}
/* 学习页面样式 */
.page-header {
  padding: 20rpx;
}

.header-card .card-header {
  text-align: center;
  font-size: 36rpx;
}

/* 搜索区域 */
.search-section {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  margin-right: 20rpx;
  font-size: 32rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 快捷操作区域 */
.quick-actions-section {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.quick-actions-card .card-content {
  padding: 20rpx 30rpx;
}

.quick-buttons {
  display: flex;
  gap: 20rpx;
}

.quick-buttons .btn {
  flex: 1;
  font-size: 26rpx;
  padding: 18rpx;
}

/* 课程标题区域 */
.courses-header {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.courses-title-card .card-header {
  text-align: center;
  font-size: 32rpx;
}

/* 课程列表 */
.courses-section {
  padding: 0 20rpx;
}

.course-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.course-card.locked {
  opacity: 0.6;
}

.course-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  position: relative;
}

.course-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.course-icon.completed {
  background: #E8F5E8;
}

.course-icon.available {
  background: #FFF3CD;
}

.course-icon.locked {
  background: #F8F9FA;
}

.course-info {
  flex: 1;
  min-width: 0;
}

.course-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  word-break: break-all;
}

.course-image{
  width: 200rpx;
  height: 200rpx;
}

.course-meta {
  flex-direction: column;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  gap: 20rpx;
}

.course-duration {
  display: flex;
  align-items: center;
}

.course-time {
  font-weight: bold;
  color: #333;
}

.course-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 15rpx;
  margin-left: 20rpx;
}

.course-buttons {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.course-btn {
  font-size: 22rpx;
  padding: 12rpx 20rpx;
  min-width: 120rpx;
  white-space: nowrap;
}

.course-experience {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  background: #FFD700;
  color: #333;
  padding: 3rpx 10rpx;
  border-radius: 0 0 0 20rpx;
  font-size: 16rpx;
}

.experience-text {
  display: flex;
  align-items: center;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .course-header {
    padding: 20rpx;
  }

  .course-title {
    font-size: 26rpx;
  }

  .course-meta {
    font-size: 22rpx;
  }

  .course-btn {
    font-size: 20rpx;
    padding: 10rpx 15rpx;
    min-width: 100rpx;
  }

  .course-experience {
    font-size: 18rpx;
    padding: 6rpx 12rpx;
  }
}

.score-display {
  display: flex;
  align-items: center;
  gap: 15rpx;
  background: white;
  padding: 15rpx 30rpx;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 3rpx dashed #e0e0e0;
}

.star-icon {
  font-size: 50rpx;
  animation: star-rotate 3s ease-in-out infinite;
}

@keyframes star-rotate {
  0%, 100% { transform: rotate(0deg) scale(1); }
  50% { transform: rotate(15deg) scale(1.1); }
}

.score-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 进度条区域 */
.progress-section {
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  margin-top: 40rpx;
}

.progress-container {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.progress-label {
  display: inline-block;
  background: linear-gradient(135deg, #2d9f4e 0%, #3db85f 100%);
  color: white;
  font-size: 26rpx;
  font-weight: bold;
  padding: 10rpx 28rpx;
  border-radius: 30rpx;
  align-self: flex-start;
  box-shadow: 0 4rpx 12rpx rgba(45, 159, 78, 0.3);
  letter-spacing: 1rpx;
}

.progress-bar-wrapper {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-left: 40rpx;
}

.progress-bar {
  flex: 1;
  height: 48rpx;
  background: linear-gradient(180deg, #e8e8e8 0%, #d4d4d4 100%);
  border-radius: 24rpx;
  position: relative;
  overflow: visible;
  border: 3rpx solid #f5f5f5;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #2d9f4e 0%, #5bc16f 50%, #7ed321 100%);
  border-radius: 24rpx;
  transition: width 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(45, 159, 78, 0.4);
}

.progress-indicator {
  position: absolute;
  top: 50%;
  transform: translate(-50%, -50%);
  transition: left 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 10;
}

.indicator-outer-ring {
  width: 68rpx;
  height: 68rpx;
  background: white;
  border-radius: 50%;
  border: 6rpx solid #7ed321;
  box-shadow: 0 4rpx 16rpx rgba(126, 211, 33, 0.5),
              0 0 0 4rpx rgba(126, 211, 33, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  animation: pulse-ring 2s ease-in-out infinite;
}

@keyframes pulse-ring {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 4rpx 16rpx rgba(126, 211, 33, 0.5),
                0 0 0 4rpx rgba(126, 211, 33, 0.2);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 6rpx 20rpx rgba(126, 211, 33, 0.6),
                0 0 0 6rpx rgba(126, 211, 33, 0.3);
  }
}

.indicator-inner-circle {
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #5bc16f 0%, #7ed321 100%);
  border-radius: 50%;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.progress-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #2d9f4e;
  min-width: 110rpx;
  text-align: right;
  letter-spacing: -1rpx;
}

/* 路径滚动区域 */
.roadmap-scroll {
  height: calc(100vh - 280rpx);
  padding: 40rpx 0;
}

.roadmap-container {
  position: relative;
  min-height: 100%;
  padding: 0 40rpx 200rpx;
}

/* 关卡节点 */
.level-node {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  transition: all 0.3s ease;
}

.level-node:active {
  transform: scale(0.95);
}

.node-border {
  width: 100%;
  height: 100%;
  border: 4rpx dashed #d0d0d0;
  border-radius: 20rpx;
  padding: 15rpx;
  background: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.level-node.current .node-border {
  border-color: #ffc800;
  border-style: solid;
  box-shadow: 0 8rpx 20rpx rgba(255, 200, 0, 0.3);
  animation: pulse-border 2s ease-in-out infinite;
}

@keyframes pulse-border {
  0%, 100% {
    border-color: #ffc800;
    box-shadow: 0 8rpx 20rpx rgba(255, 200, 0, 0.3);
  }
  50% {
    border-color: #ffdd00;
    box-shadow: 0 12rpx 30rpx rgba(255, 200, 0, 0.5);
  }
}

.level-node.completed .node-border {
  border-color: #58cc02;
  background: linear-gradient(135deg, #f0fff0 0%, #e8f8e8 100%);
}

.level-node.locked .node-border {
  opacity: 0.5;
  background: #f5f5f5;
}

.node-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* 文档类型图标 */
.lesson-icon {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #58cc02 0%, #7ed321 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 6rpx 15rpx rgba(88, 204, 2, 0.3);
}

.document-icon {
  width: 60rpx;
  height: 70rpx;
  background: white;
  border-radius: 8rpx;
  padding: 12rpx 10rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  position: relative;
}

.doc-lines {
  width: 100%;
  height: 4rpx;
  background: #58cc02;
  border-radius: 2rpx;
}

.check-mark {
  position: absolute;
  bottom: -10rpx;
  right: -10rpx;
  width: 50rpx;
  height: 50rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #58cc02;
  font-weight: bold;
  border: 4rpx solid #58cc02;
  box-shadow: 0 4rpx 10rpx rgba(88, 204, 2, 0.3);
}

/* 角色类型图标 */
.character-icon {
  width: 150rpx;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.character-emoji {
  font-size: 100rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.15));
}

/* 装饰星星 */
.decoration-stars {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.deco-star {
  position: absolute;
  font-size: 30rpx;
  animation: twinkle-star 2s ease-in-out infinite;
}

.star-1 {
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  animation-delay: 0s;
}

.star-2 {
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  animation-delay: 0.5s;
}

.star-3 {
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  animation-delay: 1s;
}

.star-4 {
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  animation-delay: 1.5s;
}

@keyframes twinkle-star {
  0%, 100% {
    opacity: 0.3;
    transform: translate(0, 0) scale(0.8);
  }
  50% {
    opacity: 1;
    transform: translate(0, 0) scale(1.2);
  }
}

/* 锁定覆盖层 */
.lock-overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 10rpx;
  z-index: 10;
}

.lock-icon {
  font-size: 60rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .progress-section {
    padding: 15rpx 20rpx;
  }

  .progress-label {
    font-size: 24rpx;
    padding: 8rpx 24rpx;
  }

  .progress-bar {
    height: 42rpx;
  }

  .indicator-outer-ring {
    width: 60rpx;
    height: 60rpx;
    border: 5rpx solid #7ed321;
  }

  .indicator-inner-circle {
    width: 28rpx;
    height: 28rpx;
  }

  .progress-text {
    font-size: 36rpx;
    min-width: 100rpx;
  }

  .level-node {
    width: 180rpx;
    height: 180rpx;
  }

  .character-emoji {
    font-size: 90rpx;
  }

  .lesson-icon {
    width: 110rpx;
    height: 110rpx;
  }
}

/* 确认弹窗样式 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: fade-in 0.3s ease;
}

@keyframes fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.dialog-container {
  width: 600rpx;
  background: white;
  border-radius: 30rpx;
  position: relative;
  animation: slide-up 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

@keyframes slide-up {
  from {
    transform: translateY(100rpx) scale(0.9);
    opacity: 0;
  }
  to {
    transform: translateY(0) scale(1);
    opacity: 1;
  }
}

.dialog-triangle {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 30rpx solid transparent;
  border-right: 30rpx solid transparent;
  border-top: 40rpx solid #58cc02;
  filter: drop-shadow(0 -4rpx 8rpx rgba(88, 204, 2, 0.3));
}

.dialog-content {
  padding: 60rpx 50rpx 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.dialog-icon {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(88, 204, 2, 0.4);
  animation: bounce-in 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes bounce-in {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.dialog-icon-image {
  width: 100rpx;
  height: 100rpx;
  display: block;
}

.dialog-emoji {
  font-size: 80rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.dialog-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
  animation: fade-in-down 0.5s ease 0.1s both;
}

@keyframes fade-in-down {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.dialog-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: center;
  margin-bottom: 20rpx;
  animation: fade-in-down 0.5s ease 0.2s both;
}

.dialog-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
  background: linear-gradient(135deg, #fff3cd 0%, #ffe8a1 100%);
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  border: 2rpx solid #ffd700;
  animation: fade-in-down 0.5s ease 0.3s both;
}

.info-icon {
  font-size: 32rpx;
}

.info-text {
  font-size: 26rpx;
  color: #856404;
  font-weight: bold;
}

.dialog-buttons {
  display: flex;
  gap: 20rpx;
  width: 100%;
  animation: fade-in-up 0.5s ease 0.4s both;
}

@keyframes fade-in-up {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.dialog-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.dialog-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.dialog-btn:active::before {
  width: 300rpx;
  height: 300rpx;
}

.dialog-btn-cancel {
  background: #f0f0f0;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.dialog-btn-cancel:active {
  background: #e0e0e0;
  transform: scale(0.95);
}

.dialog-btn-confirm {
  background: linear-gradient(135deg, #58cc02 0%, #7ed321 100%);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(88, 204, 2, 0.4);
}

.dialog-btn-confirm:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(88, 204, 2, 0.3);
}

