/* 学习页面样式 */
.page-header {
  padding: 20rpx;
}

.header-card .card-header {
  text-align: center;
  font-size: 36rpx;
}

/* 搜索区域 */
.search-section {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  margin-right: 20rpx;
  font-size: 32rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 快捷操作区域 */
.quick-actions-section {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.quick-actions-card .card-content {
  padding: 20rpx 30rpx;
}

.quick-buttons {
  display: flex;
  gap: 20rpx;
}

.quick-buttons .btn {
  flex: 1;
  font-size: 26rpx;
  padding: 18rpx;
}

/* 课程标题区域 */
.courses-header {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.courses-title-card .card-header {
  text-align: center;
  font-size: 32rpx;
}

/* 课程列表 */
.courses-section {
  padding: 0 20rpx;
}

.course-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.course-card.locked {
  opacity: 0.6;
}

.course-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  position: relative;
}

.course-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.course-icon.completed {
  background: #E8F5E8;
}

.course-icon.available {
  background: #FFF3CD;
}

.course-icon.locked {
  background: #F8F9FA;
}

.course-info {
  flex: 1;
  width: 200rpx;
  min-width: 0;
}

.course-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  word-break: break-all;
}

.course-image{
  width: 200rpx;
  height: 200rpx;
}

.course-meta {
  flex-direction: column;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  gap: 20rpx;
}

.course-duration {
  display: flex;
  align-items: center;
}

.course-time {
  font-weight: bold;
  color: #333;
}

.course-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 15rpx;
  margin-left: 20rpx;
}

.course-buttons {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.course-btn {
  font-size: 22rpx;
  padding: 12rpx 20rpx;
  min-width: 120rpx;
  white-space: nowrap;
}

/* 已完成按钮 - 绿色 */
.btn-completed {
  background: linear-gradient(135deg, #58cc02 0%, #5ead09 100%);
  color: white;
  border: none;
}

.btn-completed::after {
  border: none;
}

.btn-completed:active {
  opacity: 0.8;
}

/* 可学习按钮 - 橙色 */
.btn-available {
  background: linear-gradient(135deg, #2e9bee 0%, #294ddc 100%);
  color: white;
  border: none;
}

.btn-available::after {
  border: none;
}

.btn-available:active {
  opacity: 0.8;
}

/* 待解锁按钮 - 灰色 */
.btn-locked {
  background: #E0E0E0;
  color: #999;
  border: none;
}

.btn-locked::after {
  border: none;
}

.course-experience {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  background: #FFD700;
  color: #333;
  padding: 3rpx 10rpx;
  border-radius: 0 0 0 20rpx;
  font-size: 16rpx;
}

.experience-text {
  display: flex;
  align-items: center;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .course-header {
    padding: 20rpx;
  }

  .course-title {
    font-size: 26rpx;
  }

  .course-meta {
    font-size: 22rpx;
  }

  .course-btn {
    font-size: 20rpx;
    padding: 10rpx 15rpx;
    min-width: 100rpx;
  }

  .course-experience {
    font-size: 18rpx;
    padding: 6rpx 12rpx;
  }
}
