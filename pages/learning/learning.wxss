/* 学习页面样式 */
.page-header {
  padding: 20rpx;
}

.header-card .card-header {
  text-align: center;
  font-size: 36rpx;
}

/* 搜索区域 */
.search-section {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  margin-right: 20rpx;
  font-size: 32rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 快捷操作区域 */
.quick-actions-section {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.quick-actions-card .card-content {
  padding: 20rpx 30rpx;
}

.quick-buttons {
  display: flex;
  gap: 20rpx;
}

.quick-buttons .btn {
  flex: 1;
  font-size: 26rpx;
  padding: 18rpx;
}

/* 课程标题区域 */
.courses-header {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.courses-title-card .card-header {
  text-align: center;
  font-size: 32rpx;
}

/* 课程列表 */
.courses-section {
  padding: 0 20rpx;
}

.course-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.course-card.locked {
  opacity: 0.6;
}

.course-left {
  width: 600rpx;
}

.course-upper{
  display: flex;
  flex-direction: row;
}
.course-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  position: relative;
}

.course-icon-mini {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.course-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.course-icon.completed {
  background: #e8f5e8;
}

.course-icon.available {
  background: #fff3cd;
}

.course-icon.locked {
  background: #f8f9fa;
}

.course-info {
  flex: 1;
  width: 200rpx;
  min-width: 0;
}

.zuoye-right {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.xuexi-icon {
  width: 160rpx;
  height: 85rpx;
}
.xuexi-text {
  margin-left: 30rpx;
  width: 134rpx;
  height: 70rpx;
  font-family: Source Han Sans, Source Han Sans;
  font-weight: 900;
  font-size: 48rpx;
  color: #000000;
  line-height: 70rpx;
  text-align: left;
  font-style: normal;
  text-transform: none;
}
.course-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  word-break: break-all;
}

.course-image {
  width: 180rpx;
  height: 180rpx;
}

.course-meta {
  flex-direction: column;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  gap: 20rpx;
}

.course-duration {
  display: flex;
  align-items: center;
}

.course-time {
  display: flex; 
  font-weight: bold;
  color: #333;
  width: 160%;
  align-items: center;
  justify-content: center;
}

.course-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-left: 20rpx;
  gap:10rpx;
}

.course-buttons {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.course-btn {
  font-size: 22rpx;
  padding: 12rpx 20rpx;
  min-width: 120rpx;
  white-space: nowrap;
}

/* 已完成按钮 - 绿色 */
.btn-completed {
  background: linear-gradient(135deg, #58cc02 0%, #5ead09 100%);
  color: white;
  border: none;
}

.btn-completed::after {
  border: none;
}

.btn-completed:active {
  opacity: 0.8;
}

/* 可学习按钮 - 橙色 */
.btn-available {
  background: linear-gradient(135deg, #2e9bee 0%, #294ddc 100%);
  color: white;
  border: none;
}

.btn-available::after {
  border: none;
}

.btn-available:active {
  opacity: 0.8;
}

/* 待解锁按钮 - 灰色 */
.btn-locked {
  background: #e0e0e0;
  color: #999;
  border: none;
}

.btn-locked::after {
  border: none;
}

.course-experience {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  background: #ffd700;
  color: #333;
  padding: 3rpx 10rpx;
  border-radius: 0 0 0 20rpx;
  font-size: 16rpx;
}

.experience-text {
  display: flex;
  align-items: center;
}

/* 作业卡片样式 */
.assignment-card {
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  gap: 25rpx;
  position: relative;
  transition: all 0.3s ease;
}

.assignment-card.locked {
  opacity: 0.5;
}

.assignment-card:active {
  transform: scale(0.98);
}

/* 左侧状态图标 */
.assignment-status-icon {
  width: 50rpx;
  height: 50rpx;
}

.assignment-status-icon image {
  width: 100%;
  height: 100%;
}

/* 中间内容区域 */
.assignment-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  min-width: 0;
}

/* 标题 */
.assignment-title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

/* 标题 */
.assignment-title-text {
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 1.4;
  word-break: break-all;
}

/* 按钮组 */
.assignment-buttons {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

/* 按钮基础样式 */
.assignment-btn-img {
  width: 240rpx;
  height: 80rpx;
  transition: all 0.3s ease;
}

/* 按钮基础样式 */
.assignment-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.assignment-btn .btn-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 已完成按钮 - 浅蓝色 */
.assignment-btn-completed {
  background: #7dd3fc;
  color: #ffffff;
}

.assignment-btn-completed:active {
  background: #38bdf8;
}

/* 查看作业按钮 - 深蓝色 */
.assignment-btn-view {
  background: #0284c7;
  color: #ffffff;
}

.assignment-btn-view:active {
  background: #0369a1;
}

/* 开始作业按钮 - 深蓝色 */
.assignment-btn-start {
  background: #0284c7;
  color: #ffffff;
}

.assignment-btn-start:active {
  background: #0369a1;
}

/* 未解锁按钮 - 灰色 */
.assignment-btn-locked {
  background: #e5e7eb;
  color: #9ca3af;
}

/* 右侧经验值 */
.assignment-experience {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  flex-shrink: 0;
}

.assignment-experience .star-icon {
  width: 60rpx;
  height: 60rpx;
}

.experience-value {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.experience-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  line-height: 1;
}

.experience-unit {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 动画类 */
.anim-shake {
  animation: shake-mini 2s ease-in-out infinite;
}

/* 作业图标抖动动画 - 增强版：跳动+摇摆+放大 */
@keyframes shake-mini {
  0%, 100% {
    transform: translateY(0) rotate(0deg) scale(1);
  }
  10% {
    transform: translateY(-10rpx) rotate(-15deg) scale(1.2);
  }
  20% {
    transform: translateY(-5rpx) rotate(10deg) scale(1.2);
  }
  30% {
    transform: translateY(-10rpx) rotate(-15deg) scale(1.2);
  }
  40% {
    transform: translateY(-5rpx) rotate(10deg) scale(1.2);
  }
  50% {
    transform: translateY(0) rotate(0deg) scale(1);
  }
}
@media screen and (max-width: 375px) {
  .course-header {
    padding: 20rpx;
  }

  .course-title {
    font-size: 26rpx;
  }

  .course-meta {
    font-size: 22rpx;
  }

  .course-btn {
    font-size: 20rpx;
    padding: 10rpx 15rpx;
    min-width: 100rpx;
  }

  .course-experience {
    font-size: 18rpx;
    padding: 6rpx 12rpx;
  }
}
