/* 作业页面样式 */
.page-header {
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.header-card .card-header {
  text-align: center;
  font-size: 36rpx;
}

/* 筛选器样式 */
.filter-section {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.filter-tabs {
  display: flex;
  background: white;
  border-radius: 15rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 15rpx 10rpx;
  font-size: 24rpx;
  color: #666;
  border-radius: 10rpx;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: #6BBF59;
  color: white;
  font-weight: bold;
}

/* 作业列表样式 */
.assignments-section {
  padding: 0 20rpx;
}

.assignment-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.assignment-card.locked {
  opacity: 0.6;
}

.assignment-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.assignment-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.assignment-icon.completed {
  background: #E8F5E8;
}

.assignment-icon.available {
  background: #FFF3CD;
}

.assignment-icon.locked {
  background: #F8F9FA;
}

.assignment-info {
  flex: 1;
  min-width: 0;
}

.assignment-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.assignment-category {
  font-size: 22rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  display: inline-block;
}

.assignment-status {
  margin-left: 20rpx;
}

.assignment-meta {
  margin-bottom: 20rpx;
  font-size: 22rpx;
  color: #666;
  line-height: 1.5;
}

.related-course {
  display: block;
  margin-bottom: 8rpx;
}

.due-date {
  display: block;
  color: #999;
}

.assignment-actions {
  display: flex;
  justify-content: flex-end;
}

.assignment-btn {
  font-size: 22rpx;
  padding: 12rpx 24rpx;
  min-width: 120rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .filter-tab {
    font-size: 22rpx;
    padding: 12rpx 8rpx;
  }

  .assignment-card {
    padding: 20rpx;
  }

  .assignment-title {
    font-size: 26rpx;
  }

  .assignment-category {
    font-size: 20rpx;
  }

  .assignment-meta {
    font-size: 20rpx;
  }

  .assignment-btn {
    font-size: 20rpx;
    padding: 10rpx 20rpx;
    min-width: 100rpx;
  }
}
