<view class="page-container">
 <!-- 顶部操作按钮 -->
  <view class="top-actions">
    <button class="action-btn edit-btn" bindtap="goToFillAssignment">
      <text class="btn-icon">✏️</text>
      <text class="btn-text">修改作业</text>
    </button>
  </view>

  <!-- 作业标题 -->
  <view class="title-card" wx:if="{{assignment.title}}">
    <text class="title-text">{{assignment.title}}</text>
  </view>
 
  <!-- 作业导语 -->
  <view class="lead-section" wx:if="{{assignment.lead}}">
    <text class="lead-text">导语：{{assignment.lead}}</text>
  </view>


  <!-- 题目列表 -->
  <view class="problems-list">
    <view
      class="problem-item"
      wx:for="{{problems}}"
      wx:key="index"
    >
      <view class="problem-number">{{index + 1}}</view>
      <view class="problem-content">
        <view class="problem-title-wrapper">
          <text class="problem-title">{{item.info || item.question || item.title || '无题目'}}</text>
        </view>
        <view class="problem-answer-wrapper">
          <text class="problem-answer">{{item.formattedAnswer}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
