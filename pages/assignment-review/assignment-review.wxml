<view class="page-container">
  <!-- 顶部导航栏 -->
  <view class="header">
    <view class="back-button" bindtap="goBack">
      <text class="back-icon">‹</text>
    </view>
    <view class="points-badge">
      <text class="star-icon">⭐</text>
      <text class="points-text">{{assignment.points || 30}}分</text>
    </view>
  </view>

  <!-- 标题卡片 -->
  <view class="title-card">
    <text class="title-text">查看作业</text>
  </view>

  <!-- 题目列表 -->
  <view class="problems-list">
    <view
      class="problem-item"
      wx:for="{{problems}}"
      wx:key="index"
    >
      <view class="problem-number">{{index + 1}}</view>
      <view class="problem-content">
        <view class="problem-title-wrapper">
          <text class="problem-label">题目：</text>
          <text class="problem-title">{{item.info || item.question || item.title || '无题目'}}</text>
        </view>
        <view class="problem-answer-wrapper">
          <text class="answer-label">答案：</text>
          <text class="problem-answer">{{item.formattedAnswer}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
