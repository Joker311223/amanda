/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f7f9fc 0%, #e8f4f8 100%);
  padding: 20rpx 30rpx;
}

/* 经验值显示 */
.experience-badge {
  position: fixed;
  top: 30rpx;
  right: 30rpx;
  background: linear-gradient(135deg, #58cc02 0%, #7ed321 100%);
  color: #ffffff;
  padding: 15rpx 25rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(88, 204, 2, 0.3);
  z-index: 999;
}

.star {
  font-size: 32rpx;
}

/* 作业导语 */
.lead-section {
  background: linear-gradient(135deg, #f0f9ff 0%, #e6f7ff 100%);
  border-left: 6rpx solid #58cc02;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(88, 204, 2, 0.1);
}

.lead-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  display: block;
  word-break: break-all;
}

/* 标题卡片 */
.title-card {
  margin-bottom: 30rpx;
  background: #58a41f;
  border-radius: 20rpx;
  padding: 10rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(50, 81, 27, 0.2);
}

.title-text {
  font-size: 44rpx;
  font-weight: bold;
  color: #ffffff;
  text-align: center;
  display: block;
}

/* 题目列表 */
.problems-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  padding-bottom: 40rpx;
}

/* 题目项 */
.problem-item {
  background: #ffffff;
  border: 4rpx solid #58cc02;
  border-radius: 50rpx;
  padding: 40rpx 50rpx;
  display: flex;
  align-items: flex-start;
  gap: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(88, 204, 2, 0.1);
}

/* 题目序号 */
.problem-number {
  width: 80rpx;
  height: 80rpx;
  background: #ffffff;
  border: 4rpx solid #58cc02;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #58cc02;
  flex-shrink: 0;
}

/* 题目内容 */
.problem-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  min-width: 0;
}

/* 题目标题区域 */
.problem-title-wrapper {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.problem-label {
  font-size: 24rpx;
  color: #58cc02;
  font-weight: bold;
}

.problem-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  line-height: 1.5;
  word-break: break-all;
}

/* 答案区域 */
.problem-answer-wrapper {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 16rpx;
  border-left: 4rpx solid #58cc02;
}

.answer-label {
  font-size: 24rpx;
  color: #58cc02;
  font-weight: bold;
}

.problem-answer {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  word-break: break-all;
  white-space: pre-wrap;
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .page-container {
    padding: 20rpx;
  }

  .experience-badge {
    top: 20rpx;
    right: 20rpx;
    padding: 12rpx 20rpx;
    font-size: 26rpx;
  }

  .star {
    font-size: 28rpx;
  }

  .lead-section {
    padding: 24rpx;
    margin-bottom: 24rpx;
  }

  .lead-text {
    font-size: 26rpx;
  }

  .title-card {
    padding: 40rpx 30rpx;
    border-radius: 30rpx;
  }

  .title-text {
    font-size: 40rpx;
  }

  .problem-item {
    padding: 30rpx 40rpx;
    border-radius: 40rpx;
  }

  .problem-number {
    width: 70rpx;
    height: 70rpx;
    font-size: 36rpx;
  }

  .problem-label,
  .answer-label {
    font-size: 22rpx;
  }

  .problem-title {
    font-size: 28rpx;
  }

  .problem-answer {
    font-size: 26rpx;
  }

  .top-actions {
    padding: 20rpx 0;
  }

  .action-btn {
    font-size: 28rpx;
  }
}

/* 顶部操作按钮 */
.top-actions {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  border: none;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.edit-btn {
  background: linear-gradient(135deg, #58cc02 0%, #7ed321 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(88, 204, 2, 0.3);
}

.edit-btn:active {
  box-shadow: 0 4rpx 12rpx rgba(88, 204, 2, 0.3);
}

.btn-icon {
  font-size: 36rpx;
}

.btn-text {
  font-size: 32rpx;
}
