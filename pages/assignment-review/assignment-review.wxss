/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx 30rpx;
  padding-top: 80rpx;
}

/* 顶部导航栏 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 返回按钮 */
.back-button {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 60rpx;
  font-weight: 300;
  color: #333333;
  line-height: 1;
}

/* 分数徽章 */
.points-badge {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.star-icon {
  font-size: 48rpx;
  line-height: 1;
}

.points-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

/* 标题卡片 */
.title-card {
  background: linear-gradient(135deg, #58cc02 0%, #7ed321 100%);
  border-radius: 40rpx;
  padding: 50rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(88, 204, 2, 0.2);
}

.title-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  text-align: center;
  display: block;
}

/* 题目列表 */
.problems-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  padding-bottom: 40rpx;
}

/* 题目项 */
.problem-item {
  background: #ffffff;
  border: 4rpx solid #58cc02;
  border-radius: 50rpx;
  padding: 40rpx 50rpx;
  display: flex;
  align-items: flex-start;
  gap: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(88, 204, 2, 0.1);
}

/* 题目序号 */
.problem-number {
  width: 80rpx;
  height: 80rpx;
  background: #ffffff;
  border: 4rpx solid #58cc02;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #58cc02;
  flex-shrink: 0;
}

/* 题目内容 */
.problem-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  min-width: 0;
}

/* 题目标题区域 */
.problem-title-wrapper {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.problem-label {
  font-size: 24rpx;
  color: #58cc02;
  font-weight: bold;
}

.problem-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  line-height: 1.5;
  word-break: break-all;
}

/* 答案区域 */
.problem-answer-wrapper {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 16rpx;
  border-left: 4rpx solid #58cc02;
}

.answer-label {
  font-size: 24rpx;
  color: #58cc02;
  font-weight: bold;
}

.problem-answer {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  word-break: break-all;
  white-space: pre-wrap;
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .page-container {
    padding: 20rpx;
    padding-top: 80rpx;
  }

  .header {
    height: 100rpx;
    padding: 0 20rpx;
  }

  .back-icon {
    font-size: 50rpx;
  }

  .star-icon {
    font-size: 40rpx;
  }

  .points-text {
    font-size: 32rpx;
  }

  .title-card {
    padding: 40rpx 30rpx;
    border-radius: 30rpx;
  }

  .title-text {
    font-size: 40rpx;
  }

  .problem-item {
    padding: 30rpx 40rpx;
    border-radius: 40rpx;
  }

  .problem-number {
    width: 70rpx;
    height: 70rpx;
    font-size: 36rpx;
  }

  .problem-label,
  .answer-label {
    font-size: 22rpx;
  }

  .problem-title {
    font-size: 28rpx;
  }

  .problem-answer {
    font-size: 26rpx;
  }
}
