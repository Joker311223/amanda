/* 作业打卡页面样式 */
.page-container {
  min-height: 100vh;
  background: #ffffff;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
}

/* 进度条区域 */
.progress-section {
  margin-bottom: 60rpx;
}

.progress-header {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 30rpx;
  margin-top: 20rpx;
}

.progress-label {
  font-size: 36rpx;
  font-weight: bold;
  color: #386518;
}

.progress-count-big {
  font-size: 44rpx;
  color: #386518;
  font-weight: 500;
  margin-right: -13rpx;
  margin-top: -5rpx;
}


.progress-count {
  font-size: 32rpx;
  color: #386518;
  font-weight: 500;
}

.progress-bar-wrapper {
  position: relative;
  width: 100%;
}

.progress-bar {
  width: 100%;
  height: 24rpx;
  background: #e5f5e0;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #58cc02 0%, #7ed321 100%);
  border-radius: 12rpx;
  transition: width 0.3s ease;
}

.progress-indicator {
  position: absolute;
  top: 50%;
  transform: translate(-50%, -50%);
  transition: left 0.3s ease;
}

.indicator-dot {
  width: 40rpx;
  height: 40rpx;
  background: #58cc02;
  border: 6rpx solid #ffffff;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(88, 204, 2, 0.4);
}

/* 问题内容区域 */
.question-section {
  margin-bottom: 40rpx;
}

.question-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #333333;
  font-weight: 500;
}

/* 输入区域 */
.input-section {
  flex: 1;
  margin-bottom: 40rpx;
}

.input-card {
  background: linear-gradient(135deg, #58cc02 0%, #7ed321 100%);
  border-radius: 30rpx;
  padding: 20rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(88, 204, 2, 0.2);
  min-height: 300rpx;
}

/* 选择题样式 - 白色背景 */
.input-card.choice-card {
  background: #ffffff;
  padding: 0;
  min-height: auto;
  box-shadow: none;
}

.input-header {
  display: flex;
  justify-content: center;
  margin-bottom: 10rpx;
  flex: 1;
}

.input-label {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.input-textarea {
  width: 100%;
  min-height: 200rpx;
  background: transparent;
  color: #ffffff;
  font-size: 28rpx;
  line-height: 1.6;
}

.input-textarea::placeholder {
  color: rgba(255, 255, 255, 0.7);
}

/* 选择题选项样式 */
.radio-item,
.checkbox-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  border: 4rpx solid #58cc02;
  border-radius: 50rpx;
  padding: 30rpx 40rpx;
  margin-bottom: 20rpx;
  position: relative;
  transition: all 0.3s ease;
}

.radio-item:last-child,
.checkbox-item:last-child {
  margin-bottom: 0;
}

/* 选中状态 */
.radio-item.selected,
.checkbox-item.selected {
  background: linear-gradient(135deg, #58cc02 0%, #7ed321 100%);
  border-color: #58cc02;
}

.radio-item.selected .option-label,
.radio-item.selected .option-text,
.checkbox-item.selected .option-label,
.checkbox-item.selected .option-text {
  color: #ffffff;
}

/* 选项标签 (A, B, C, D, E) */
.option-label {
  width: 60rpx;
  height: 60rpx;
  background: #ffffff;
  border: 4rpx solid #58cc02;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #58cc02;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.radio-item.selected .option-label,
.checkbox-item.selected .option-label {
  background: #ffffff;
  border-color: #ffffff;
  color: #58cc02;
}

/* 选项内容 */
.option-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.option-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 1.4;
}

.option-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.4;
}

.radio-item.selected .option-title,
.checkbox-item.selected .option-title {
  color: #ffffff;
}

.radio-item.selected .option-text,
.checkbox-item.selected .option-text {
  color: rgba(255, 255, 255, 0.9);
}

/* 选中图标 */
.check-icon {
  position: absolute;
  right: 40rpx;
  font-size: 48rpx;
  color: #ffffff;
  font-weight: bold;
}

/* 隐藏原生radio和checkbox */
radio,
checkbox {
  display: none;
}

/* 评分滑块样式 */
.score-section {
  padding: 40rpx;
}

.slider-container {
  position: relative;
  margin: 60rpx 0 40rpx;
}

.custom-slider {
  width: 100%;
  height: 80rpx;
  background: #7ed321;
  border-radius: 40rpx;
  position: relative;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(88, 204, 2, 0.3);
}

.slider-track {
  position: absolute;
  left: 40rpx;
  right: 40rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.slider-segment {
  width: 12rpx;
  height: 50rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 6rpx;
}

.slider-segment.active {
  background: #ffffff;
}

.slider-label {
  position: absolute;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  top: 50%;
  transform: translateY(-50%);
}

.slider-label.left {
  left: 40rpx;
}

.slider-label.right {
  right: 40rpx;
}

.slider-value {
  text-align: center;
  font-size: 72rpx;
  font-weight: bold;
  color: #333333;
  margin-top: 30rpx;
}

/* 微信原生slider样式覆盖 */
slider {
  width: 100%;
  margin: 40rpx 0;
}

.score-options {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  padding: 0 20rpx;
}

.score-option {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  flex: 1;
}

/* 底部按钮 */
.bottom-actions {
  display: flex;
  justify-content: center;
  padding-bottom: 80rpx;
}

.next-btn {
  background: linear-gradient(135deg, #58cc02 0%, #7ed321 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  padding: 25rpx 80rpx;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(88, 204, 2, 0.3);
  transition: all 0.3s ease;
}

.next-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(88, 204, 2, 0.3);
}

/* 完成弹窗 */
.completion-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  width: 600rpx;
  background: linear-gradient(135deg, #58cc02 0%, #7ed321 100%);
  border-radius: 40rpx;
  padding: 80rpx 60rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: slideUp 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  position: relative;
  overflow: visible;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 庆祝图标区域 */
.celebration-icon {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  position: relative;
}

/* 冰淇淋 */
.ice-cream {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 2;
}

/* 冰淇淋球 */
.ice-cream-scoops {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  margin-bottom: -20rpx;
}

.scoop {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 6rpx solid #333;
  animation: scoopBounce 0.6s ease infinite alternate;
}

.scoop.yellow {
  background: linear-gradient(135deg, #FFD93D 0%, #FFC107 100%);
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  z-index: 3;
  animation-delay: 0s;
}

.scoop.blue {
  background: linear-gradient(135deg, #6DD5FA 0%, #2980B9 100%);
  top: 40rpx;
  left: 0;
  z-index: 2;
  animation-delay: 0.1s;
}

.scoop.orange {
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B6B 100%);
  top: 40rpx;
  right: 0;
  z-index: 2;
  animation-delay: 0.2s;
}

@keyframes scoopBounce {
  0% {
    transform: translateY(0);
  }
  100% {
    transform: translateY(-10rpx);
  }
}

/* 冰淇淋筒 */
.ice-cream-cone {
  width: 120rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #FFF 0%, #F5F5F5 100%);
  border: 6rpx solid #333;
  border-radius: 0 0 60rpx 60rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: inset 0 -20rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 冰淇淋筒的表情 */
.cone-face {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15rpx;
  margin-top: 20rpx;
}

.cone-eye {
  width: 12rpx;
  height: 12rpx;
  background: #333;
  border-radius: 50%;
  position: absolute;
  top: 40rpx;
}

.cone-eye.left {
  left: 30rpx;
}

.cone-eye.right {
  right: 30rpx;
}

.cone-mouth {
  font-size: 32rpx;
  color: #333;
  margin-top: 30rpx;
}

/* 装饰粒子 */
.decoration-particles {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
}

.particle {
  position: absolute;
  animation: float 3s ease-in-out infinite;
}

.particle.star {
  font-size: 40rpx;
  animation: twinkle 2s ease-in-out infinite;
}

.particle.circle {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  animation: float 2.5s ease-in-out infinite;
}

.particle.plus {
  font-size: 36rpx;
  font-weight: bold;
  animation: rotate 4s linear infinite;
}

.particle.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-20rpx) rotate(180deg);
  }
}

@keyframes twinkle {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.5;
    transform: scale(1.2);
  }
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.5);
    opacity: 0.5;
  }
}

/* 分数显示 */
.points-display {
  display: flex;
  align-items: baseline;
  margin-bottom: 30rpx;
  animation: scaleIn 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) 0.3s backwards;
}

@keyframes scaleIn {
  from {
    transform: scale(0);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.points-number {
  font-size: 140rpx;
  font-weight: bold;
  color: #ffffff;
  line-height: 1;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.points-unit {
  font-size: 60rpx;
  font-weight: bold;
  color: #ffffff;
  margin-left: 10rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 完成消息 */
.completion-message {
  margin-bottom: 50rpx;
  animation: fadeInUp 0.5s ease 0.4s backwards;
}

@keyframes fadeInUp {
  from {
    transform: translateY(20rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.completion-message text {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 500;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* 继续按钮 */
.continue-btn {
  width: 100%;
  background: #ffffff;
  color: #58cc02;
  font-size: 36rpx;
  font-weight: bold;
  padding: 28rpx;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  animation: fadeInUp 0.5s ease 0.5s backwards;
}

.continue-btn::after {
  border: none;
}

.continue-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .page-container {
    padding: 30rpx 20rpx;
  }

  .progress-label {
    font-size: 32rpx;
  }

  .progress-count {
    font-size: 28rpx;
  }

  .question-text {
    font-size: 28rpx;
  }

  .input-card {
    padding: 30rpx;
  }

  .input-label {
    font-size: 32rpx;
  }

  .input-textarea {
    font-size: 26rpx;
  }

  .next-btn {
    font-size: 28rpx;
    padding: 20rpx 60rpx;
  }

  /* 完成弹窗响应式 */
  .modal-content {
    width: 540rpx;
    padding: 60rpx 40rpx 50rpx;
  }

  .celebration-icon {
    height: 260rpx;
  }

  .ice-cream-scoops {
    width: 160rpx;
    height: 160rpx;
  }

  .scoop {
    width: 90rpx;
    height: 90rpx;
  }

  .ice-cream-cone {
    width: 110rpx;
    height: 130rpx;
  }

  .points-number {
    font-size: 120rpx;
  }

  .points-unit {
    font-size: 50rpx;
  }

  .completion-message text {
    font-size: 28rpx;
  }

  .continue-btn {
    font-size: 32rpx;
    padding: 24rpx;
  }
}
