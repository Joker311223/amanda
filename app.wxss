/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen",
    "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue",
    sans-serif;
}

.page-header {
  padding: 20rpx;
  margin-bottom: 20rpx;
}

/* 主题色彩 */
.primary-color {
  color: #6bbf59;
}

.primary-bg {
  background-color: #6bbf59;
}

.secondary-color {
  color: #4a90e2;
}

.secondary-bg {
  background-color: #4a90e2;
}

.text-gray {
  color: #666666;
}

.text-light-gray {
  color: #999999;
}

/* 通用容器 */
.container {
  padding: 20rpx;
}

.page-container {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  overflow: hidden;
}

.card-header {
  padding: 30rpx;
  background: #6bbf59;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}

.card-content {
  padding: 30rpx;
}

/* 按钮样式 */
.btn {
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  padding: 20rpx 40rpx;
  margin: 10rpx 0;
  border: none;
  outline: none;
}

.btn-primary {
  background: #6bbf59;
  color: white;
}

.btn-primary:active {
  background: #5aa84a;
}

.btn-secondary {
  background: #4a90e2;
  color: white;
}

.btn-secondary:active {
  background: #3a7bc8;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #6bbf59;
  color: #6bbf59;
}

.btn-outline:active {
  background: #6bbf59;
  color: white;
}

.btn-disabled {
  background: #cccccc;
  color: #999999;
}

/* 经验值显示 */
.experience-badge {
  display: flex;
  align-items: center;
  background: #ffd700;
  color: #333;
  padding: 5rpx 20rpx;
  border-radius: 0 0 0 30rpx;
  font-size: 24rpx;
  font-weight: bold;
  position: fixed;
  top: 0rpx;
  right: 0rpx;
  z-index: 1000;
}

.experience-badge .star {
  margin-right: 10rpx;
  font-size: 28rpx;
}

/* 状态标签 */
.status-tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  text-align: center;
  display: inline-block;
}

.status-completed {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 204rpx;
  height: 48rpx;
  background: #70c8e3;
  border-radius: 50rpx;
}

.status-available {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 204rpx;
  height: 48rpx;
  background: #eeb033;
  border-radius: 50rpx;
}

.status-locked {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 204rpx;
  height: 48rpx;
  background: #999999;
  border-radius: 50rpx;
}

.status-text {
  width: 84rpx;
  height: 40rpx;
  font-family: Source Han Sans, Source Han Sans;
  font-weight: 400;
  font-size: 28rpx;
  color: #ffffff;
  line-height: 40rpx;
  text-align: center;
  font-style: normal;
  text-transform: none;
}

/* 进度条 */
.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #6bbf59;
  transition: width 0.3s ease;
}

/* 课程卡片 */
.course-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.course-card.locked {
  opacity: 0.6;
}

.course-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.course-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.course-info {
  flex: 1;
}

.course-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.course-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.course-duration {
  margin-right: 20rpx;
}

/* 作业卡片 */
.assignment-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.assignment-card.locked {
  opacity: 0.6;
}

.assignment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.assignment-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.assignment-meta {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.assignment-actions {
  display: flex;
  gap: 20rpx;
}

/* 技能卡片 */
.skill-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.skill-card-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: #6bbf59;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin: 0 auto 20rpx;
}

.skill-card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.skill-card-category {
  font-size: 22rpx;
  color: #666;
}

/* 我的笔记 */
.emotion-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  justify-content: center;
  margin: 30rpx 0;
}

.emotion-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 20rpx;
  background: white;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  min-width: 120rpx;
}

.emotion-item.selected {
  background: #6bbf59;
  color: white;
}

.emotion-emoji {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.emotion-label {
  font-size: 22rpx;
}

.intensity-slider {
  margin: 40rpx 0;
}

.intensity-label {
  text-align: center;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.form-input {
  width: 100%;
  padding: 25rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 15rpx;
  font-size: 28rpx;
  background: white;
  box-sizing: border-box;
  height: 100rpx;
}

.form-input:focus {
  border-color: #6bbf59;
  outline: none;
}

.form-textarea {
  min-height: 200rpx;
  resize: vertical;
}

/* 性别选择器 */
.gender-selector {
  display: flex;
  gap: 20rpx;
}

.gender-option {
  flex: 1;
  padding: 25rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 50rpx;
  text-align: center;
  font-size: 28rpx;
  background: white;
  color: #666;
}

.gender-option.selected {
  border-color: #6bbf59;
  background: #6bbf59;
  color: white;
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .container {
    padding: 15rpx;
  }

  .card-content {
    padding: 20rpx;
  }

  .course-header {
    padding: 20rpx;
  }
}
